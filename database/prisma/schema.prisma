generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int@id @default(autoincrement())
  username String @unique
  email String 
  password String
  token String
  todo Todo[]
}
model Todo{.                                                    
  id Int @id @default(autoincrement())
  user_id Int
  taskname String
  done Boolean @default(false)
  user User @relation(fields: [user_id], references: [id])
}
